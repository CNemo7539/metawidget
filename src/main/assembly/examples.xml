<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
	<id>examples</id>
	<formats>
		<format>zip</format>
	</formats>
	<baseDirectory>metawidget-${project.version}</baseDirectory>
	<fileSets>
		<fileSet>
			<directory>/examples/gwt/clientside/war</directory>
			<excludes>
				<exclude>META-INF/**</exclude>
				<exclude>WEB-INF/**</exclude>
			</excludes>
			<outputDirectory>/examples/gwt/clientside</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>/examples/swing/addressbook/target/lib</directory>
			<outputDirectory>/examples/swing/lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>/examples/swing/addressbook-applet/target/addressbook-swing-applet</directory>
			<outputDirectory>/examples/swing/applet</outputDirectory>
			<excludes>
				<exclude>META-INF/**</exclude>
				<exclude>WEB-INF/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>/examples/swing/appframework/target/lib</directory>
			<outputDirectory>/examples/swing/lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>/examples/swing/animalraces/target/lib</directory>
			<outputDirectory>/examples/swing/lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>/examples/swt/addressbook/target/lib</directory>
			<outputDirectory>/examples/swt/lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>/src/main/resources/for-examples</directory>
			<outputDirectory>/examples</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/for-bin/lgpl.txt</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>/src/main/resources/for-src</directory>
			<outputDirectory>/src</outputDirectory>
		</fileSet>
		<!-- Source code -->
		<fileSet>
			<directory>/examples</directory>
			<outputDirectory>/src/examples</outputDirectory>
			<includes>
				<include>/**/src/**/*.*</include>
				<include>/**/pom.xml</include>
				<include>/**/application*/res/**/*.*</include>
				<include>/**/application*/AndroidManifest.xml</include>
				<include>/gwt/clientside/war/css/**</include>
				<include>/gwt/clientside/war/gxt/**</include>
				<include>/gwt/clientside/war/media/**</include>
				<include>/gwt/clientside/war/WEB-INF/web.xml</include>
				<include>/gwt/clientside/war/index.html</include>
			</includes>
			<excludes>
				<exclude>.*</exclude>
				<exclude>**/target/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>/examples/android/addressbook/application/target/addressbook-android.apk</source>
			<outputDirectory>/examples/android</outputDirectory>
		</file>
		<file>
			<source>/examples/faces/addressbook/target/addressbook-faces.war</source>
			<outputDirectory>/examples/faces</outputDirectory>
		</file>
		<file>
			<source>/examples/faces/addressbook2/target/addressbook-faces2.war</source>
			<outputDirectory>/examples/faces</outputDirectory>
		</file>
		<file>
			<source>/examples/faces/penguincolony/target/penguincolony-faces.war</source>
			<outputDirectory>/examples/faces</outputDirectory>
		</file>
		<file>
			<source>/examples/faces/penguincolony/target/penguincolony-faces.war</source>
			<outputDirectory>/examples/faces</outputDirectory>
		</file>
		<file>
			<source>/examples/gwt/addressbook/target/addressbook-gwt.war</source>
			<outputDirectory>/examples/gwt</outputDirectory>
		</file>
		<file>
			<source>/examples/jsp/addressbook/target/addressbook-jsp.war</source>
			<outputDirectory>/examples/jsp</outputDirectory>
		</file>
		<file>
			<source>/examples/spring/addressbook/target/addressbook-spring.war</source>
			<outputDirectory>/examples/spring</outputDirectory>
		</file>
		<file>
			<source>/examples/struts/addressbook/target/addressbook-struts.war</source>
			<outputDirectory>/examples/struts</outputDirectory>
		</file>
		<file>
			<source>/examples/swing/addressbook/target/addressbook-swing.jar</source>
			<outputDirectory>/examples/swing</outputDirectory>
		</file>
		<file>
			<source>/examples/swing/appframework/target/appframework-swing.jar</source>
			<outputDirectory>/examples/swing</outputDirectory>
		</file>
		<file>
			<source>/examples/swing/animalraces/target/animalraces-swing.jar</source>
			<outputDirectory>/examples/swing</outputDirectory>
		</file>
		<file>
			<source>/examples/swt/addressbook/target/addressbook-swt.jar</source>
			<outputDirectory>/examples/swt</outputDirectory>
		</file>
		<!-- Source code -->
		<file>
			<source>examples/pom.xml</source>
			<outputDirectory>/src/examples</outputDirectory>
		</file>
		<file>
			<source>pom.xml</source>
			<outputDirectory>/src</outputDirectory>
		</file>
	</files>
</assembly>