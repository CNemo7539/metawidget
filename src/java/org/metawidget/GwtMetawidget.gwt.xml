<module>

	<!-- Core GWT -->
	
	<inherits name="com.google.gwt.user.User" />
	<inherits name="com.google.gwt.xml.XML" />

	<!-- Source paths -->
	
	<source path="gwt/client"/>
	<source path="inspector/gwt/remote/iface"/>
	<source path="inspector/gwt/remote/client"/>
	<source path="inspector/iface"/>
	<source path="mixin/base"/>
	<source path="mixin/gwt"/>
	<source path="util/simple"/>
	<source path="widgetbuilder"/>
	
	<!-- WidgetBuilders -->
	
  	<generate-with class="org.metawidget.gwt.generator.FactoryGenerator">
		<when-type-assignable class="org.metawidget.gwt.client.widgetbuilder.WidgetBuilderFactory"/>
	</generate-with>

	<!-- Inspectors -->
	
  	<generate-with class="org.metawidget.gwt.generator.FactoryGenerator">
		<when-type-assignable class="org.metawidget.gwt.client.inspector.InspectorFactory"/>
	</generate-with>

	<servlet path="/metawidget-inspector" class="org.metawidget.inspector.gwt.remote.server.GwtRemoteInspectorImpl" />

	<!-- Binding -->
	
  	<generate-with class="org.metawidget.gwt.generator.FactoryGenerator">
		<when-type-assignable class="org.metawidget.gwt.client.propertybinding.PropertyBindingFactory"/>
	</generate-with>

  	<generate-with class="org.metawidget.gwt.generator.FactoryGenerator">
		<when-type-assignable class="org.metawidget.gwt.client.actionbinding.ActionBindingFactory"/>
	</generate-with>

	<!-- Layout -->

  	<generate-with class="org.metawidget.gwt.generator.FactoryGenerator">
		<when-type-assignable class="org.metawidget.gwt.client.ui.layout.LayoutFactory"/>
	</generate-with>

</module>
