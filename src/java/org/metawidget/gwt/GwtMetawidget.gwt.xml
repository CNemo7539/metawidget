<module>

	<!-- Core GWT -->
	
	<inherits name='com.google.gwt.user.User' />
	<inherits name='com.google.gwt.xml.XML' />
	<inherits name='org.metawidget.impl.GwtBaseMetawidgetMixin' />
	<inherits name='org.metawidget.util.GwtUtil' />

	<!-- Inspectors -->
	
  	<generate-with class="org.metawidget.gwt.server.inspector.GwtInspectorFactoryGenerator">
		<when-type-assignable class="org.metawidget.gwt.client.inspector.GwtInspectorFactory"/>
	</generate-with>

	<servlet path='/metawidget-inspector' class='org.metawidget.gwt.server.inspector.remote.GwtRemoteInspectorImpl' />

	<!-- Binding -->
	
  	<generate-with class="org.metawidget.gwt.server.binding.BindingFactoryGenerator">
		<when-type-assignable class="org.metawidget.gwt.client.binding.BindingFactory"/>
	</generate-with>

	<!-- Layout -->

  	<generate-with class="org.metawidget.gwt.server.layout.LayoutFactoryGenerator">
		<when-type-assignable class="org.metawidget.gwt.client.ui.layout.LayoutFactory"/>
	</generate-with>

</module>
