<module>

	<!-- Core GWT -->
	
	<inherits name='com.google.gwt.user.User' />
	<inherits name='org.metawidget.GwtMetawidget' />

	<!-- Client -->
	
	<source path="gwt/addressbook/client"/>
	<source path="gwt/addressbook/inspector/remote/client"/>
	<source path="shared/addressbook/model"/>
	<entry-point class='org.metawidget.example.gwt.addressbook.client.ui.AddressBookModule' />

	<!-- Server -->
	
	<servlet path='/contacts' class='org.metawidget.example.gwt.addressbook.server.rpc.ContactsServiceImpl' />

	<!-- Binding -->
	
  	<generate-with class="org.metawidget.gwt.generator.binding.simple.SimpleBindingAdapterGenerator">
		<when-type-assignable class="org.metawidget.example.shared.addressbook.model.Contact"/>
	</generate-with>
	
</module>
