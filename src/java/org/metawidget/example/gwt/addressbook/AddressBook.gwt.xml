<module>

	<!-- Core GWT -->
	
	<inherits name='com.google.gwt.user.User' />
	<inherits name='org.metawidget.gwt.GwtMetawidget' />
	<inherits name='org.metawidget.example.shared.addressbook.AddressBookModel' />

	<!-- Client -->
	
	<entry-point class='org.metawidget.example.gwt.addressbook.client.ui.AddressBookModule' />

	<!-- Server -->
	
	<servlet path='/contacts' class='org.metawidget.example.gwt.addressbook.server.ContactsServiceImpl' />

	<!-- Binding -->
	
  	<generate-with class="org.metawidget.gwt.server.binding.simple.SimpleBindingAdapterGenerator">
		<when-type-assignable class="org.metawidget.example.shared.addressbook.model.Contact"/>
	</generate-with>
	
</module>
