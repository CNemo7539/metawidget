<?xml version="1.0"?>
<metawidget xmlns="http://metawidget.org"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://metawidget.org http://metawidget.org/xsd/metawidget-1.0.xsd" version="1.0">

	<springMetawidgetTag xmlns="java:org.metawidget.jsp.tagext.html.spring">
		<inspector>
			<compositeInspector xmlns="java:org.metawidget.inspector.composite" config="CompositeInspectorConfig">
				<inspectors>
					<list>
						<xmlInspector xmlns="java:org.metawidget.inspector.xml" config="XmlInspectorConfig">
							<inputStream>
								<resource>org/metawidget/shared/allwidgets/model/metawidget-metadata.xml</resource>
							</inputStream>
						</xmlInspector>
						<propertyTypeInspector xmlns="java:org.metawidget.inspector.propertytype"/>
					</list>
				</inspectors>
			</compositeInspector>
		</inspector>
		<layout>
			<htmlTableLayout xmlns="java:org.metawidget.jsp.tagext.html.layout" config="HtmlTableLayoutConfig">
				<tableStyle>
					<string>aTableStyle</string>
				</tableStyle>
				<tableStyleClass>
					<string>aTableStyleClass</string>
				</tableStyleClass>
				<columnStyleClasses>
					<array>
						<string>aLabelClass</string>
						<string>aComponentClass</string>
						<string>aRequiredClass</string>
					</array>
				</columnStyleClasses>
				<sectionStyleClass>
					<string>section-heading</string>
				</sectionStyleClass>
				<footerStyle>
					<string>aFooterStyle</string>
				</footerStyle>
				<footerStyleClass>
					<string>aFooterStyleClass</string>
				</footerStyleClass>				
			</htmlTableLayout>
		</layout>		
	</springMetawidgetTag>

</metawidget>