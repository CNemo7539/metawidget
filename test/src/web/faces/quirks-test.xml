<project name="faces-allwidgets-test" default="test-all">

	<property file="../../../../build.properties" />
	<import file="${webtest.dir}/lib/taskdef.xml" />

	<target name="test-all">
		<webtest name="test-faces">
			<config resultpath="${build.dir}"/>
			<steps>
				<invoke url="${webtest.url}/quirks-faces" />
				
				<verifyXPath xpath="count(/html/body/form/table/tbody/tr)" text="4"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[1]/th" text="3 boolean:"/>
				
				<!-- Test the 'not tri-state if not listbox' in HtmlMetawidget.buildActiveWidget -->

				<verifyXPath xpath="count(/html/body/form/table/tbody/tr[1]/td[1]/table/tbody/tr/td)" text="2"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[1]/td[1]/table/tbody/tr/td[1]/input/@type" text="radio"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[1]/td[1]/table/tbody/tr/td[1]/label" text="Yes"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[1]/td[1]/table/tbody/tr/td[2]/input/@type" text="radio"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[1]/td[1]/table/tbody/tr/td[2]/label" text="No"/>

				<!-- Test spanning of large components that don't have a label -->
								
				<verifyXPath xpath="count(/html/body/form/table/tbody/tr[2]/th)" text="0"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[2]/td[1]/textarea/@id" text="form:quirksLarge"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[2]/td[1]/@colspan" text="5"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[2]/td[2]" text="*"/>

				<!-- Test Lists with a UiLookup -->
								
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/th[1]" text="Strings:"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/td[1]/table/tbody/tr/td[1]/input[@type='checkbox']/@value" text="Foo"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/td[1]/table/tbody/tr/td[1]/label" text="Foo"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/td[1]/table/tbody/tr/td[2]/input[@type='checkbox']/@value" text="Bar"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/td[1]/table/tbody/tr/td[2]/label" text="Bar"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/td[1]/table/tbody/tr/td[3]/input[@type='checkbox']/@value" text="Baz"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/td[1]/table/tbody/tr/td[3]/label" text="Baz"/>
				<verifyXPath xpath="count(/html/body/form/table/tbody/tr[3]/td[1]/table/tbody/tr/td)" text="3"/>

				<!-- Test Lists with a FacesLookup -->
								
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/th[2]" text="Integers:"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/td[3]/table/tbody/tr[1]/td/input[@type='checkbox']/@value" text="1"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/td[3]/table/tbody/tr[1]/td/label" text="1"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/td[3]/table/tbody/tr[2]/td/input[@type='checkbox']/@value" text="2"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/td[3]/table/tbody/tr[2]/td/label" text="2"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/td[3]/table/tbody/tr[3]/td/input[@type='checkbox']/@value" text="3"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/td[3]/table/tbody/tr[3]/td/label" text="3"/>
				<verifyCheckbox htmlid="form:quirksIntegers:2" checked="false"/>
				<setCheckbox htmlid="form:quirksIntegers:2" checked="true"/>				
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/td[3]/table/tbody/tr[4]/td/input[@type='checkbox']/@value" text="4"/>
				<verifyXPath xpath="/html/body/form/table/tbody/tr[3]/td[3]/table/tbody/tr[4]/td/label" text="4"/>
				<verifyXPath xpath="count(/html/body/form/table/tbody/tr[3]/td[3]/table/tbody/tr)" text="4"/>

				<verifyXPath xpath="/html/body/form/table/tbody/tr[4]/td[1]/input[@type='submit']/@value" text="Refresh"/>

				<!-- Test the '-1 check' in UIMetawidget.inspect -->
			
				<verifyXPath xpath="count(/html/body/table[1]/tbody/tr)" text="0"/>
				
				<!-- Test converters on Lists with a FacesLookup -->
				
				<clickButton label="Refresh"/>
				<verifyText text="rror"/>
				<setInputField name="form:quirksLarge" value="Some text"/>
				<verifyXPath xpath="count(//input[@value='Refresh'])" text="1"/>

				<clickButton label="Refresh"/>
				<verifyCheckbox htmlid="form:quirksIntegers:2" checked="true"/>
				
				<not>
					<verifyText text="rror"/>
				</not>				
				
				<!-- Test zero columns -->
				
				<invoke url="${webtest.url}/quirks-faces/index2.jsf" />
				<verifyXPath xpath="count(/html/body/table[1]/tbody/tr)" text="7"/>
				<verifyXPath xpath="/html/body/table[1]/tbody/tr[1]/th" text="3 boolean:"/>
				<verifyXPath xpath="count(/html/body/table[1]/tbody/tr[2]/td[1]/table/tbody/tr/td)" text="2"/>
				<verifyXPath xpath="/html/body/table[1]/tbody/tr[2]/td[1]/table/tbody/tr/td[1]/input/@type" text="radio"/>
				<verifyXPath xpath="/html/body/table[1]/tbody/tr[2]/td[1]/table/tbody/tr/td[1]/label" text="Yes"/>
				<verifyXPath xpath="/html/body/table[1]/tbody/tr[2]/td[1]/table/tbody/tr/td[2]/input/@type" text="radio"/>
				<verifyXPath xpath="/html/body/table[1]/tbody/tr[2]/td[1]/table/tbody/tr/td[2]/label" text="No"/>
				<verifyXPath xpath="/html/body/table[1]/tbody/tr[3]/td[1]/textarea/@id" text="quirksLarge"/>
				<verifyXPath xpath="/html/body/table[1]/tbody/tr[3]/td[1]/@colspan" text=""/>
				
				<!-- Test duplicated controls -->
				
				<verifyXPath xpath="/html/body/table[2]/tbody/tr[3]/td[1]/textarea/@id" text="quirksLarge_2"/>				

				<!-- Test overriding a required UIInput with a UIOutput (star should disappear) --> 

				<verifyXPath xpath="/html/body/table[1]/tbody/tr[3]/td[2]" text="*"/>
				<verifyXPath xpath="/html/body/table[3]/tbody/tr[3]/td[2]" text=""/>

			</steps>
		</webtest>
	</target>

</project>
